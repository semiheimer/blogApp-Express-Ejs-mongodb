{%- include('../partials/incHeader') %}
<!-- main start -->
<main class="container">
    <div class="row g-5">
        <div class="col-md-12 p-3">
            <a href="/"><i class="bi bi-arrow-left-circle fs-3 me-2"></i></a>
            <div class="mt-3">
                <h1 class="text-center">LOGIN</h1>
                <form action="" method="POST">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                {% const userInput1= typeof userInput !=='undefined'? userInput : null %}
                                {% const errorMessage1= typeof errorMessage !=='undefined'? errorMessage : null %}
                                <td>E-Mail</td>
                                <td><input type="text" name="email" required class="form-control"
                                        value="{%= userInput1?.email ? userInput1.email:'admin@test.com' %}">
                                </td>
                            </tr>
                            <tr>
                                <td>Password</td>
                                <td><input type="password" name="password" required class="form-control"
                                        value="{%= userInput1 ? userInput1.password:'aA*123456' %}">
                                    {% if( errorMessage1) { %}
                                    <label class="text-danger ms-1 mt-1">{%= errorMessage1 %}</label>
                                    {% }%}
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td><label><input type="checkbox" name="rememberMe" value="1"> Remember Me</label></td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <p>
                                        If you are not registered user, please <a href="/auth/register">sign up</a>.
                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p></p>

                    <div class="d-flex flex-row-reverse">
                        <button class="btn btn-primary" type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<!-- main end -->

{%- include('../partials/incFooter') %}